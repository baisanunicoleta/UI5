<mvc:View controllerName="booklist.library.controller.UpdateBook"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">

    <App id="add">
    <pages>
        <Page>
        <VBox>
            <Button text="Back" press="onBack" />
        </VBox>

        <f:SimpleForm id="sf2" layout="ResponsiveLayout" title="Update Book">
            <f:content>
                <Label text="ISBN"/>
                <Input id="isbn" type="text"/>

                <Label text="Title"/>
                <Input id="title" type="text"/>

                <Label text="Author"/>
                <Input id="author" type="text"/>

                <Label text="Publishing Date"/>
                <Input id="pub" type="text"/>

                <Label text="Language"/>
                <Input id="lan" type="text"/>

                <Label text="Number of Books"/>
                <Input id="nrbooks" type="text"/>

                <Label text="Number of Available Books"/>
                <Input id="nravab" type="text"/>

            </f:content>
        </f:SimpleForm>

        <VBox>
            <Button text="Update" press="onProcess" />
        </VBox>

        </Page>
    </pages>
    </App>
</mvc:View>